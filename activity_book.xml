<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BookActivity">
    <RelativeLayout
        android:id="@+id/firstlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/booking"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Booking"
            android:textSize="30dp"
            android:textStyle="normal"
            android:textColor="#000000"
            android:gravity="center" />

        <ImageView
            android:id="@+id/rentaldetails"
            android:layout_width="match_parent"
            android:layout_height="128dp"
            android:layout_below="@+id/booking"
            android:src="@drawable/rab" />

        <ImageView
            android:id="@+id/imgjupiter"
            android:layout_width="match_parent"
            android:layout_height="155dp"
            android:layout_below="@+id/rentaldetails"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="19dp"
            android:layout_marginTop="250dp"
            android:src="@drawable/jupiter" />

        <TextView
            android:id="@+id/jupiter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rentaldetails"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="29dp"
            android:layout_marginEnd="0dp"
            android:layout_marginRight="0dp"
            android:gravity="center"
            android:text="Jupiter"
            android:textColor="#000000"
            android:textSize="30sp"
            android:textStyle="normal" />

        <Button
            android:id="@+id/bookjupiter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imgjupiter"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="0dp"
            android:background="#FFF54F08"
            android:gravity="center"
            android:onClick="book"
            android:text="Book"
            android:textSize="20dp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/access"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Access125"
            android:textSize="30sp"
            android:textStyle="normal"
            android:textColor="#000000"
            android:layout_below="@+id/bookjupiter"
            android:gravity="center"
            android:layout_marginTop="10dp"/>
        <ImageView
            android:id="@+id/imgaccess"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/access125"
            android:layout_below="@+id/access"
            android:layout_marginTop="10dp"/>
        <Button
            android:id="@+id/bookaccess"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imgaccess"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="10dp"
            android:background="#FFF54F08"
            android:gravity="center"
            android:onClick="book"
            android:text="Book"
            android:textSize="20dp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/activa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Honda Activa"
            android:textSize="30sp"
            android:textStyle="normal"
            android:textColor="#000000"
            android:layout_below="@+id/bookaccess"
            android:gravity="center"
            android:layout_marginTop="10dp"/>

        <ImageView
            android:id="@+id/imgactiva"
            android:layout_width="match_parent"
            android:layout_height="213dp"
            android:layout_below="@+id/activa"
            android:layout_marginTop="10dp"
            android:src="@drawable/activa" />
        <Button
            android:id="@+id/bookactiva"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imgactiva"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="10dp"
            android:background="#FFF54F08"
            android:gravity="center"
            android:onClick="book"
            android:text="Book"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginBottom="25dp"/>


    </RelativeLayout>


</ScrollView>